<Application x:Class="ukol1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ukol1"
             Startup="Application_Startup">
    <Application.Resources>
        <!-- Primary button used across dialogs -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#6A3F0E" />
            <Setter Property="Foreground" Value="AntiqueWhite" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Margin" Value="6,0,0,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#82521A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#54310A" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="Gray" />
                                <Setter Property="Foreground" Value="#DDD" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Smooth TextBox look -->
        <Style TargetType="TextBox" x:Key="DialogTextBox">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="BorderBrush" Value="#C9C9C9" />
            <Setter Property="BorderThickness" Value="1" />
            <EventSetter Event="GotKeyboardFocus" Handler="MoveCaretToEnd" />
        </Style>

        <Style TargetType="Label" x:Key="DialogLabel">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,8,8" />
        </Style>

        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Width" Value="60" />
            <Setter Property="Height"   Value="20" />
            <Setter Property="Padding"  Value="6,3" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin"   Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#82521A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#54310A" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>