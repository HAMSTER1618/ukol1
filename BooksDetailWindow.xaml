<Window x:Class="ukol1.BooksDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ukol1"
        mc:Ignorable="d"
        Title="Detail knihy" Height="450" Width="800"
        Background="#F2F2F2"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#C9A99A" />
        <SolidColorBrush x:Key="PanelBg" Color="#FFF5E1" />
        <SolidColorBrush x:Key="GroupBg" Color="#FFFFFF" />
        <SolidColorBrush x:Key="TextOnPanel" Color="#5E2A2B" />

        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="{StaticResource GroupBg}" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
        </Style>
    </Window.Resources>

    <ScrollViewer>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Picture for book -->
            <Border Grid.Row="0" Grid.Column="0"
                    BorderBrush="{StaticResource AccentBrush}"
                    Background="{StaticResource PanelBg}" BorderThickness="2"
                    Width="200" Height="300" Margin="0,0,10,10">
                <Image x:Name="CoverImage" Stretch="Uniform" />
            </Border>

            <!-- Panel with name and data -->
            <Border Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"
                    Background="{StaticResource AccentBrush}"
                    Padding="10">
                <StackPanel>
                    <TextBlock x:Name="NameText"
                               FontSize="25" FontWeight="Bold"
                               Foreground="{StaticResource TextOnPanel}"
                               TextWrapping="Wrap" Margin="0,0,0,10" />

                    <StackPanel>
                        <TextBlock Foreground="{StaticResource TextOnPanel}">
                            <Run Text="Autor: " />
                            <Run x:Name="AuthorText" FontWeight="SemiBold" />
                        </TextBlock>

                        <TextBlock Foreground="{StaticResource TextOnPanel}">
                            <Run Text="Nakladatelství: " />
                            <Run x:Name="PublisherText" FontWeight="SemiBold" />
                        </TextBlock>

                        <TextBlock Foreground="{StaticResource TextOnPanel}">
                            <Run Text="Rok vydání: " />
                            <Run x:Name="YearTex" FontWeight="SemiBold" />
                            <Run Text=" | Počet stran: " />
                            <Run x:Name="NumberOfPagesText" FontWeight="SemiBold" />
                        </TextBlock>

                        <TextBlock Foreground="{StaticResource TextOnPanel}">
                            <Run Text="Žánry: " />
                            <Run x:Name="GenreText" FontWeight="SemiBold" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                      Header="Popis knihy" Background="{StaticResource PanelBg}">
                <TextBlock x:Name="DescText"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource TextOnPanel}" />
            </GroupBox>
        </Grid>
    </ScrollViewer>
</Window>