<Window x:Class="ukol1.KnihyDetailWindowAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ukol1"
        mc:Ignorable="d"
        Title="KnihyDetailWindowAdd" Height="450" Width="800">
    <Grid Margin="10" Background="#F1E2CD">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="427*" />
                <ColumnDefinition Width="353*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,42,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="104" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="171" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="39" />
                    <!-- Nazev + Autor -->
                    <RowDefinition Height="Auto" MinHeight="44" />
                    <!-- Nakladatelstvi -->
                    <RowDefinition Height="Auto" MinHeight="24.96" />
                    <!-- Rok + Pocet stran -->
                    <RowDefinition Height="Auto" MinHeight="33" />
                    <!-- Vybrat obalku -->
                    <RowDefinition />
                    <!-- Zanry -->
                </Grid.RowDefinitions>

                <!-- Nazev knihy -->
                <TextBlock Grid.Column="0" Text="Nazev knihy:"
                           VerticalAlignment="Center" Margin="10,0,0,0"
                           FontSize="14" Height="18" />
                <TextBox   x:Name="NazevKnihyBox"    Grid.Row="0"
                           Grid.Column="1" Margin="10,10,10,10"
                           Grid.ColumnSpan="2" />

                <!-- Autor -->

                <!-- Nakladatelstvi -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Nakladatelstvi:"
                           VerticalAlignment="Center" Margin="10,0,0,0" FontSize="14" Height="18" />
                <TextBox   x:Name="NakladatBox"      Grid.Row="1"
                           Grid.Column="1" Margin="10,13,10,12"
                           Grid.ColumnSpan="2" />
                <Popup x:Name="CityPopup"
                       PlacementTarget="{Binding ElementName=NakladatBox}"
                       Placement="Relative"
                       AllowsTransparency="True"
                       StaysOpen="True"
                       Width="{Binding ActualWidth, ElementName=NakladatBox}">
                    <Border Background="White" BorderBrush="#CCC"
                            BorderThickness="1" CornerRadius="4" Padding="4">
                        <ListBox x:Name="CityList"
                                 MaxHeight="180"
                                 PreviewMouseLeftButtonUp="CityList_PreviewMouseLeftButtonUp" />
                    </Border>
                </Popup>

                <!-- Rok + Pocet stran -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Rok vydani:"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontSize="14" Height="19" />
                <TextBox   x:Name="RokVydaniBox"     Grid.Row="3" Margin="10,10,19,3" />

                <TextBlock Grid.Row="2" Grid.Column="1"
                           Text="Pocet stran:"
                           VerticalAlignment="Center"
                           Margin="10,0,25,0"
                           FontSize="14" Height="19" />
                <TextBox   x:Name="PocetStranBox"    Grid.Row="3" Margin="10,10,21,3" Grid.Column="1" />

                <!-- Vybrat obalku-->
                <TextBlock Grid.Row="2" Grid.Column="2" Text="Vybrat obalku:"
                           VerticalAlignment="Center" Margin="5,0,10,0"
                           FontSize="14" Height="19" />
                <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Horizontal"
                            Margin="5,0,1,2">
                    <Button Content="Vybrat obalku" Click="PickCover_Click" Width="89"
                            Height="21" Margin="0,9,3,0" />
                    <TextBlock x:Name="CoverFileLabel" VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"
                               Width="180" />
                </StackPanel>

                <!-- Zanry -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Zanry" VerticalAlignment="Top"
                           Margin="10,10,16,0" FontSize="14" Height="19" />
                <TextBox   x:Name="ZanryBox" Grid.Row="4" Grid.ColumnSpan="3"
                       Margin="8,34,2,10" AcceptsReturn="True" TextWrapping="Wrap"
                       VerticalScrollBarVisibility="Auto" MinHeight="120" />
                <Popup x:Name="GenrePopup"
                       PlacementTarget="{Binding ElementName=ZanryBox}"
                       Placement="Relative"
                       AllowsTransparency="True"
                       StaysOpen="False"
                       PopupAnimation="Slide">
                    <Border Background="#FFF0F0F0" BorderBrush="#FF000000"
                            BorderThickness="1" CornerRadius="4" Padding="4">
                        <ListBox x:Name="GenreList"
                                 PreviewMouseLeftButtonUp="GenreList_PreviewMouseLeftButtonUp"
                                 Width="120" MaxHeight="180">
                        </ListBox>
                    </Border>
                </Popup>
            </Grid>
            <!-- Popis -->
            <Grid Margin="2,10,0,0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Popis" FontSize="14" Margin="0,61,294,278" Grid.Row="1" />
                <TextBox x:Name="PopisBox" Grid.Row="1"
                     AcceptsReturn="True" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" Margin="0,87,10,7" />
                <TextBlock Text="Autor:" VerticalAlignment="Top" Margin="0,3,280,0"
                           FontSize="14" Height="18" Grid.Row="1" />
                <TextBox   x:Name="AutorBox" Grid.Row="1"
                           Margin="67,0,10,338" />
            </Grid>
        </Grid>

        <!--buttons-->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Zrusit" Width="80" Margin="5" Click="CancelButton_Click" FontSize="14" />
            <Button Content="Ulozit" Width="80" Margin="5" Click="SaveButton_Click" FontSize="14" />
        </StackPanel>
    </Grid>
</Window>