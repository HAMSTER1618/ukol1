<Window x:Class="ukol1.KnihyDetailWindowAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ukol1"
        mc:Ignorable="d"
        Title="KnihyDetailWindowAdd" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="White" />
            <Setter Property="Background" Value="#6A3F0E" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Cursor" Value="Hand" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="4"
                        SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#82521A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#54310A" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="Gray" />
                                <Setter Property="Foreground" Value="#DDD" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10" Background="#F1E2CD">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="427*" />
                <ColumnDefinition Width="353*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,42,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="104" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="171" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="39" />
                    <!-- Nazev + Author -->
                    <RowDefinition Height="59*" />
                    <!-- Nakladatelstvi -->
                    <RowDefinition Height="Auto" MinHeight="27.72" />
                    <!-- Rok + Pocet stran -->
                    <RowDefinition Height="Auto" />
                    <!-- Vybrat obalku -->
                    <RowDefinition Height="29*" />
                    <!-- Zanry -->
                    <RowDefinition Height="198*" />
                </Grid.RowDefinitions>

                <!-- Nazev knihy -->
                <TextBlock Grid.Column="0" Text="Název knihy:"
                           VerticalAlignment="Center" Margin="10,0,0,0"
                           FontSize="14" Height="18" />
                <Border x:Name="NameBorder"
                        Grid.Row="0" Grid.Column="1"
                        Grid.ColumnSpan="2"
                        BorderThickness="1"
                        Margin="10,10,10,8">
                    <TextBox x:Name="NameBooksBox" Margin="0" />
                </Border>

                <!-- Nakladatelstvi -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Nakladatelství:"
                        VerticalAlignment="Top" Margin="5,13,5,0"
                           FontSize="14" Height="18" />
                <TextBox   x:Name="PublBox"      Grid.Row="1"
                           Grid.Column="1" Margin="10,13,10,27"
                           Grid.ColumnSpan="2" />
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="Název, město (např.: Albatros, Praha)"
                           VerticalAlignment="Top"
                           Margin="10,32,13,0"
                           FontSize="14" Height="18" Grid.ColumnSpan="2" />
                <Popup x:Name="CityPopup"
                       PlacementTarget="{Binding ElementName=PublBox}"
                       Placement="Relative"
                       AllowsTransparency="True"
                       StaysOpen="True" Grid.ColumnSpan="3" Margin="0,0,124,0">
                    <Border Background="White" BorderBrush="#CCC"
                            BorderThickness="1" CornerRadius="4" Padding="4">
                        <ListBox x:Name="CityList"
                                 MaxHeight="180"
                                 PreviewMouseLeftButtonUp="CityList_PreviewMouseLeftButtonUp" />
                    </Border>
                </Popup>

                <!-- Rok + Pocet stran -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Rok vydání:"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontSize="14" Height="20" />
                <Border x:Name="YearBorder"
                        Margin="10,18,12,34"
                        Grid.Row="3" Grid.Column="0">
                    <TextBox x:Name="YearPrintBox" Grid.Row="3" Margin="0,0,0,0"
                             MaxLength="4" FontSize="14" />
                </Border>

                <Popup x:Name="RokErrPopup"
                       PlacementTarget="{Binding ElementName=RokVydaniBox}"
                       Placement="Bottom"
                       StaysOpen="True"
                       AllowsTransparency="True"
                       IsHitTestVisible="False"
                       HorizontalOffset="0" VerticalOffset="4">
                    <Border Background="#FFFFEEEE"
                            BorderBrush="#FFCC0000"
                            BorderThickness="2"
                            Padding="6"
                            Width="{Binding ElementName=RokVydaniBox, Path=ActualWidth}">
                        <TextBlock x:Name="RokErrText"
                            Text="Lze zadat pouze číslice."
                            TextWrapping="Wrap"
                            Foreground="#CC0000"
                            FontWeight="SemiBold" />
                    </Border>
                </Popup>

                <TextBlock Grid.Row="2" Grid.Column="1"
                           Text="Počet stran:"
                           VerticalAlignment="Center"
                           Margin="10,0,12,0"
                           FontSize="14" Height="20" />
                <Border x:Name="StranBorder"
                        Margin="10,18,12,34"
                        Grid.Column="1" Grid.Row="3">
                    <TextBox x:Name="NumberOfPagesBox" Grid.Row="3" Margin="0,0,0,0"
                             MaxLength="5" Grid.Column="1"
                             FontSize="14" />
                </Border>
                <Popup x:Name="StranErrPopup"
                       PlacementTarget="{Binding ElementName=PocetStranBox}"
                       Placement="Bottom"
                       StaysOpen="True"
                       AllowsTransparency="True"
                       IsHitTestVisible="False"
                       HorizontalOffset="0" VerticalOffset="4">
                    <Border Background="#FFFFEEEE"
                            BorderBrush="#FFCC0000"
                            BorderThickness="2"
                            Padding="6"
                            Width="{Binding ElementName=PocetStranBox, Path=ActualWidth}">
                        <TextBlock x:Name="StranErrText"
                           Text="Lze zadat pouze číslice."
                           TextWrapping="Wrap"
                           Foreground="#CC0000"
                           FontWeight="SemiBold" />
                    </Border>
                </Popup>

                <!-- Vybrat obálku -->
                <TextBlock Grid.Row="2" Grid.Column="2" Text="Vybrat obálku:"
                           VerticalAlignment="Center" Margin="5,0,10,0"
                           FontSize="14" Height="20" />

                <Button Content="Vybrat obálku" Click="PickCover_Click" Grid.Column="2"
                        Margin="5,18,77,34" Grid.Row="3" />
                <TextBlock x:Name="CoverFileLabel" VerticalAlignment="Top"
                               TextTrimming="CharacterEllipsis" Margin="5,45,15,0"
                           Grid.Column="2" Grid.Row="3" Height="22"
                           TextWrapping="WrapWithOverflow" />

                <!-- Zanry -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Žánry"
                           VerticalAlignment="Center"
                            Margin="10,0,16,0" FontSize="14" Height="19" />
                <TextBox   x:Name="GenreBox" Grid.Row="5" Grid.ColumnSpan="3"
                       Margin="8,1,2,10" AcceptsReturn="True" TextWrapping="Wrap"
                       VerticalScrollBarVisibility="Auto" MinHeight="120" />
                <Popup x:Name="GenrePopup"
                       PlacementTarget="{Binding ElementName=GenreBox}"
                       Placement="Relative"
                       AllowsTransparency="True"
                       StaysOpen="False"
                       PopupAnimation="Slide">
                    <Border Background="#FFF0F0F0" BorderBrush="#FF000000"
                            BorderThickness="1" CornerRadius="4" Padding="4">
                        <ListBox x:Name="GenreList"
                                 PreviewMouseLeftButtonUp="GenreList_PreviewMouseLeftButtonUp"
                                 Width="120" MaxHeight="180">
                        </ListBox>
                    </Border>
                </Popup>
            </Grid>

            <Grid Margin="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="38.34" />
                    <RowDefinition Height="Auto" MinHeight="39.62" />
                    <RowDefinition Height="Auto" MinHeight="42.62" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <!--Autor-->
                <TextBlock Grid.Row="0" Text="Autor:" FontSize="14" Margin="10,10,293,0" />
                <Border x:Name="AuthorBorder" Grid.Row="0" BorderThickness="1" Margin="0,0,0,2" Grid.RowSpan="2">
                    <TextBox x:Name="AuthorBox" Margin="60,9,9,45" />
                </Border>
                <TextBlock Text="Příjmení a jméno (např. Haig Matt)" FontSize="14" Margin="60,34,15,20" Grid.RowSpan="2" />
                <!-- Popis-->
                <TextBlock Grid.Row="2" Text="Popis" FontSize="14" Margin="10,19,200,5" />
                <TextBox x:Name="DescBox" Grid.Row="3"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MinHeight="120" Margin="10,0,10,10" />
            </Grid>
        </Grid>

        <!--buttony-->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Zrušit" Width="80"
                    Margin="5"
                    Click="CancelButton_Click"
                    FontSize="14"
                    Style="{StaticResource PrimaryButton}"
                    Foreground="AntiqueWhite"
                    Cursor="Hand" />
            <Button Content="Uložit" Width="80" Margin="5"
                    Click="SaveButton_Click"
                    FontSize="14"
                    Foreground="AntiqueWhite"
                    Style="{StaticResource PrimaryButton}" />
        </StackPanel>
    </Grid>
</Window>