<Window x:Class="ukol1.KnihyDetailWindowAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ukol1"
        mc:Ignorable="d"
        Title="KnihyDetailWindowAdd" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="White" />
            <Setter Property="Background" Value="#6A3F0E" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Cursor" Value="Hand" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="4"
                        SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#82521A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#54310A" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="Gray" />
                                <Setter Property="Foreground" Value="#DDD" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10" Background="#F1E2CD">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="427*" />
                <ColumnDefinition Width="353*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,42,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="104" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="171" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="39" />
                    <!-- Nazev + Author -->
                    <RowDefinition Height="Auto" MinHeight="44" />
                    <!-- Nakladatelstvi -->
                    <RowDefinition Height="Auto" MinHeight="24.96" />
                    <!-- Rok + Pocet stran -->
                    <RowDefinition Height="Auto" MinHeight="33" />
                    <!-- Vybrat obalku -->
                    <RowDefinition />
                    <!-- Zanry -->
                </Grid.RowDefinitions>

                <!-- Nazev knihy -->
                <TextBlock Grid.Column="0" Text="Název knihy:"
                           VerticalAlignment="Center" Margin="10,0,0,0"
                           FontSize="14" Height="18" />
                <Border x:Name="NazevBorder"
                        Grid.Row="0" Grid.Column="1"
                        Grid.ColumnSpan="2"
                        BorderThickness="1"
                        Margin="10,10,10,10">
                    <TextBox x:Name="NazevKnihyBox" Margin="0,0,-1,0" />
                </Border>

                <!-- Nakladatelstvi -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Nakladatelství:"
                        VerticalAlignment="Bottom" Margin="10,0,0,13"
                           FontSize="14" Height="18" />
                <TextBox   x:Name="NakladatBox"      Grid.Row="1"
                           Grid.Column="1" Margin="10,13,10,12"
                           Grid.ColumnSpan="2" />
                <Popup x:Name="CityPopup"
                       PlacementTarget="{Binding ElementName=NakladatBox}"
                       Placement="Relative"
                       AllowsTransparency="True"
                       StaysOpen="True"
                       Width="{Binding ActualWidth, ElementName=NakladatBox}">
                    <Border Background="White" BorderBrush="#CCC"
                            BorderThickness="1" CornerRadius="4" Padding="4">
                        <ListBox x:Name="CityList"
                                 MaxHeight="180"
                                 PreviewMouseLeftButtonUp="CityList_PreviewMouseLeftButtonUp" />
                    </Border>
                </Popup>

                <!-- Rok + Pocet stran -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Rok vydání:"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontSize="14" Height="19" />
                <Border x:Name="RokBorder"
                        Grid.Row="3" BorderThickness="1"
                        Margin="12,14,12,14">
                    <TextBox x:Name="RokVydaniBox" Grid.Row="0" Margin="4,5,4,8" MaxLength="4" Grid.RowSpan="2" />
                </Border>
                <Popup x:Name="RokErrPopup"
                       PlacementTarget="{Binding ElementName=RokVydaniBox}"
                       Placement="Bottom"
                       StaysOpen="True"
                       AllowsTransparency="True"
                       IsHitTestVisible="False"
                       HorizontalOffset="0" VerticalOffset="4">
                    <Border Background="#FFFFEEEE"
                            BorderBrush="#FFCC0000"
                            BorderThickness="2"

                            Padding="6"
                            Width="{Binding ElementName=RokVydaniBox, Path=ActualWidth}">
                        <TextBlock x:Name="RokErrText"
                            Text="Lze zadat pouze číslice."
                            Foreground="#CC0000"
                            FontWeight="SemiBold" />
                    </Border>
                </Popup>

                <TextBlock Grid.Row="2" Grid.Column="1"
                           Text="Počet stran:"
                           VerticalAlignment="Center"
                           Margin="10,0,25,0"
                           FontSize="14" Height="19" />
                <Border x:Name="StranBorder"
                        Grid.Row="3" Grid.Column="1"
                        BorderThickness="1"
                        Margin="12,14,12,14">
                    <TextBox x:Name="PocetStranBox" Grid.Row="0" Margin="4,5,4,8" MaxLength="5" Grid.RowSpan="2" />
                </Border>
                <Popup x:Name="StranErrPopup"
                       PlacementTarget="{Binding ElementName=PocetStranBox}"
                       Placement="Bottom"
                       StaysOpen="True"
                       AllowsTransparency="True"
                       IsHitTestVisible="False"
                       HorizontalOffset="0" VerticalOffset="4">
                    <Border Background="#FFFFEEEE"
                            BorderBrush="#FFCC0000"
                            BorderThickness="2"

                            Padding="6"
                            Width="{Binding ElementName=PocetStranBox, Path=ActualWidth}">
                        <TextBlock x:Name="StranErrText"
                           Text="Lze zadat pouze číslice."
                           Foreground="#CC0000"
                           FontWeight="SemiBold" />
                    </Border>
                </Popup>

                <!-- Vybrat obálku -->
                <TextBlock Grid.Row="2" Grid.Column="2" Text="Vybrat obálku:"
                           VerticalAlignment="Center" Margin="5,0,10,0"
                           FontSize="14" Height="19" />
                <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Horizontal"
                            Margin="5,0,1,2">
                    <Button Content="Vybrat obálku" Click="PickCover_Click" Width="89"
                            Height="20" />
                    <TextBlock x:Name="CoverFileLabel" VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"
                               Width="180" />
                </StackPanel>

                <!-- Zanry -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Žánry"
                           VerticalAlignment="Top"
                            Margin="10,10,16,0" FontSize="14" Height="19" />
                <TextBox   x:Name="ZanryBox" Grid.Row="4" Grid.ColumnSpan="3"
                       Margin="8,34,2,0" AcceptsReturn="True" TextWrapping="Wrap"
                       VerticalScrollBarVisibility="Auto" MinHeight="120" />
                <Popup x:Name="GenrePopup"
                       PlacementTarget="{Binding ElementName=ZanryBox}"
                       Placement="Relative"
                       AllowsTransparency="True"
                       StaysOpen="False"
                       PopupAnimation="Slide">
                    <Border Background="#FFF0F0F0" BorderBrush="#FF000000"
                            BorderThickness="1" CornerRadius="4" Padding="4">
                        <ListBox x:Name="GenreList"
                                 PreviewMouseLeftButtonUp="GenreList_PreviewMouseLeftButtonUp"
                                 Width="120" MaxHeight="180">
                        </ListBox>
                    </Border>
                </Popup>
            </Grid>
            <!-- Popis -->
            <Grid Margin="2,0,0,0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" MinHeight="437.96" />
                </Grid.RowDefinitions>
                <TextBlock Text="Popis" FontSize="14"
                           Margin="0,61,294,278" Grid.Row="1" />
                <TextBox x:Name="PopisBox" Grid.Row="1"
                     AcceptsReturn="True" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" Margin="0,87,10,69" />
                <!-- Author -->
                <TextBlock Text="Autor:" VerticalAlignment="Top"
                           Margin="0,10,280,0"
                           FontSize="14" Height="18" Grid.Row="1" />
                <Border x:Name="AuthorBorder" Grid.Row="1"
                        BorderThickness="1"
                        Margin="67,10,10,410">
                    <TextBox x:Name="AuthorBox" Margin="0,0,0,0" />
                </Border>
            </Grid>
        </Grid>

        <!--buttony-->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Zrušit" Width="80"
                    Margin="5"
                    Click="CancelButton_Click"
                    FontSize="14"
                    Style="{StaticResource PrimaryButton}"
                    Foreground="AntiqueWhite"
                    Cursor="Hand" />
            <Button Content="Uložit" Width="80" Margin="5"
                    Click="SaveButton_Click"
                    FontSize="14"
                    Foreground="AntiqueWhite"
                    Style="{StaticResource PrimaryButton}" />
        </StackPanel>
    </Grid>
</Window>