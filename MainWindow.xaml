<Window x:Class="ukol1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ukol1"
        mc:Ignorable="d"
        Title="Knihovna" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="BooksTabBg" Color="#9D674D" />
        <SolidColorBrush x:Key="AuthoryTabBg" Color="#D1B091" />
        <SolidColorBrush x:Key="PublisherTabBg" Color="#6D6960" />

        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="True" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Margin" Value="10" />
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="White" />
            <Setter Property="Background" Value="#6A3F0E" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Cursor" Value="Hand" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#82521A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#54310A" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="Gray" />
                                <Setter Property="Foreground" Value="#DDD" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <TabControl>

            <TabItem Header="Knihy">

                <Grid Background="{StaticResource BooksTabBg}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="TableBooks"
                              Grid.Row="0" Margin="10,10,10,8"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionChanged="TableBooks_SelectionChanged"
                              PreviewKeyDown="TableBooks_PreviewKeyDown"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              EnableRowVirtualization="True"
                              EnableColumnVirtualization="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="25">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Název" Width="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Hyperlink Click="OpenBookLink_Click"
                                                       Foreground="Black">
                                                <Run Text="{Binding Nazev}" />
                                            </Hyperlink>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Autor" Binding="{Binding Autor}" Width="2*" />
                            <DataGridTextColumn Header="Nakladatelství" Binding="{Binding Nakladatelstvi}" Width="2*" />

                            <DataGridTextColumn Header="Rok" Binding="{Binding Rok}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Počet stran" Binding="{Binding PocetStran}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="CtxEdit" Header="Upravit" />
                                <MenuItem x:Name="CtxDelete"  Header="Smazat" />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>

                    <StackPanel Grid.Row="2"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Margin="10,0,10,10">
                        <Button x:Name="BtnAddBook"
                                Content="Přidat knihu"
                                Width="100" Margin="5"
                                Style="{StaticResource PrimaryButton}"
                                Click="AddBook_Click"
                                Foreground="AntiqueWhite"
                                Padding="100" FontSize="14" />

                        <Button x:Name="BtnEditBook"
                                Content="Upravit Knihu"
                                Width="100" Margin="5"
                                Style="{StaticResource PrimaryButton}"
                                Foreground="AntiqueWhite"
                                Click="EditBook_Click" />
                        <Button x:Name="BtnDeleteBook"
                                Content="Smazat Knihu"
                                Width="100"
                                Margin="5"
                                Style="{StaticResource PrimaryButton}"
                                Foreground="AntiqueWhite"
                                Click="DeleteBook_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- AUTHORS TAB -->

            <TabItem Header="Autori">
                <Grid Background="{StaticResource AuthoryTabBg}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- table -->
                        <RowDefinition Height="Auto" />
                        <!-- action bar -->
                    </Grid.RowDefinitions>

                    <!-- Authors grid -->
                    <DataGrid x:Name="TableAuthor"
                                  Grid.Row="0" Margin="10,10,10,8"
                                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="30">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Jméno"    Binding="{Binding JMENO}"    Width="2*" />
                            <DataGridTextColumn Header="Příjmení" Binding="{Binding PRIJMENI}" Width="2*" />

                            <!-- Per-row edit button -->
                            <DataGridTemplateColumn Header="Akce" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Upravit…" Padding="6,2"
                                                Click="RowEditAuthorRow_Click"
                                                Tag="{Binding}"
                                                Style="{StaticResource PrimaryButton}"
                                                Foreground="AntiqueWhite"
                                                Margin="1" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Actions under the grid
                    <StackPanel Grid.Row="1" Orientation="Horizontal"
                                HorizontalAlignment="Center" Margin="0,0,0,10" Width="90">
                        <Button Content="Přidat autor"
                              Click="AddAuthor_Click"
                              Style="{StaticResource PrimaryButton}"
                              Padding="10,4" Margin="0,0,8,0"
                                Foreground="AntiqueWhite" Height="20" FontSize="14"
                                Width="90" />
                    </StackPanel>-->
                </Grid>
            </TabItem>

            <!-- PUBLISHER-->
            <TabItem Header="Nakladatelství">
                <Grid Background="{StaticResource PublisherTabBg}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- table -->
                        <RowDefinition Height="Auto" />
                        <!-- action bar -->
                    </Grid.RowDefinitions>

                    <!-- Publishers grid -->
                    <DataGrid x:Name="TablePubl"
                              Grid.Row="0" Margin="10,10,10,8"
                              AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="30">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Název" Binding="{Binding NAZEV_FIRMY}" Width="2*" />
                            <DataGridTextColumn Header="Město" Binding="{Binding MESTO}"        Width="2*" />

                            <!-- Per-row edit button -->
                            <DataGridTemplateColumn Header="Akce" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Upravit…" Padding="6,2"
                                                Click="RowEditPublisherRow_Click"
                                                Tag="{Binding}"
                                                Style="{StaticResource PrimaryButton}"
                                                Foreground="AntiqueWhite"
                                                Margin="1" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Actions under the grid
                    <StackPanel Grid.Row="1" Orientation="Horizontal"
                                HorizontalAlignment="Center" Margin="10,0,10,10">
                        <Button Content="Přidat nakladatelství"
                              Click="AddPublisher_Click"
                              Style="{StaticResource PrimaryButton}"
                              Padding="100"
                              Foreground="AntiqueWhite"
                              Height="25" Width="135" />
                    </StackPanel>-->
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>