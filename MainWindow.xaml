<Window x:Class="ukol1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ukol1"
        mc:Ignorable="d"
        Title="Knihovna" Height="450" Width="800">

    <Window.Resources>
        <SolidColorBrush x:Key="KnihyTabBg" Color="#9D674D" />
        <SolidColorBrush x:Key="AuthoryTabBg" Color="#D1B091" />
        <SolidColorBrush x:Key="NakladatelstviTabBg" Color="#6D6960" />

        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="True" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Margin" Value="10" />
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="White" />
            <Setter Property="Background" Value="#6A3F0E" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Cursor" Value="Hand" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#82521A" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#54310A" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="Gray" />
                                <Setter Property="Foreground" Value="#DDD" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <TabControl>

            <TabItem Header="Knihy">

                <Grid Background="{StaticResource KnihyTabBg}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="TableBooks"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionChanged="TableBooks_SelectionChanged"
                              Grid.Row="0"

                              PreviewKeyDown="TableBooks_PreviewKeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="25">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Název" Width="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Hyperlink Click="OpenBookLink_Click"
                                                       Foreground="Black">
                                                <Run Text="{Binding Nazev}" />
                                            </Hyperlink>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Autor" Binding="{Binding Autor}" Width="2*" />
                            <DataGridTextColumn Header="Nakladatelství" Binding="{Binding Nakladatelstvi}" Width="2*" />

                            <DataGridTextColumn Header="Rok" Binding="{Binding Rok}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Počet stran" Binding="{Binding PocetStran}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="CtxEdit" Header="Upravit" />
                                <MenuItem x:Name="CtxDelete"  Header="Smazat" />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>

                    <StackPanel Grid.Row="2"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Margin="10,10,10,10">
                        <Button x:Name="BtnPridatKnihu"
                                Content="Přidat knihu"
                                Width="100" Margin="5"
                                Style="{StaticResource PrimaryButton}"
                                Click="PridatKnihu_Click"
                                Foreground="AntiqueWhite"
                                Padding="100" FontSize="14" />

                        <!--<Button x:Name="BtnUpravitKnihu"
                                Content="Upravit Knihu"
                                Width="100" Margin="5"
                                Style="{StaticResource PrimaryButton}"
                                Foreground="AntiqueWhite"
                                Click="EditBook_Click" />
                        <Button x:Name="BtnSmazatKnihu"
                                Content="Smazat Knihu"
                                Width="100"
                                Margin="5"
                                Style="{StaticResource PrimaryButton}"
                                Foreground="AntiqueWhite"
                                Click="DeleteBook_Click" />-->
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Autori">
                <Grid Background="{StaticResource AuthoryTabBg}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="TablAutori"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="25">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Jméno" Binding="{Binding JMENO}" Width="2*" />
                            <DataGridTextColumn Header="Příjmení" Binding="{Binding PRIJMENI}" Width="2*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Nakladatelství">
                <Grid Background="{StaticResource NakladatelstviTabBg}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="TablNakladatelstvi"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False" Grid.ColumnSpan="2" Margin="10,10,10,10">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="25">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Název" Binding="{Binding NAZEV_FIRMY}" Width="2*" />
                            <DataGridTextColumn Header="Město" Binding="{Binding MESTO}" Width="2*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>