<Window x:Class="ukol1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ukol1"
        mc:Ignorable="d"
        Title="Knihovna" Height="450" Width="811"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="BooksTabBg" Color="#9D674D" />
        <SolidColorBrush x:Key="AuthoryTabBg" Color="#D1B091" />
        <SolidColorBrush x:Key="PublisherTabBg" Color="#6D6960" />

        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="True" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Margin" Value="10" />
        </Style>
    </Window.Resources>

    <DockPanel>
        <TabControl>
            <!-- BOOKS TAB -->
            <TabItem Header="Knihy">

                <Grid Background="{StaticResource BooksTabBg}">
                    <Grid.RowDefinitions>
                        <!--Table-->
                        <RowDefinition Height="*" />
                        <!--action-->
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--Books grid-->
                    <DataGrid x:Name="TableBooks"
                              Grid.Row="0"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserResizeColumns="False"
                              CanUserReorderColumns="False"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              SelectionChanged="TableBooks_SelectionChanged"
                              PreviewKeyDown="TableBooks_PreviewKeyDown"
                              ScrollViewer.CanContentScroll="False"
                              EnableColumnVirtualization="True"
                              EnableRowVirtualization="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="25">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Název" Width="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Hyperlink Click="OpenBookLink_Click"
                                                       Foreground="Black">
                                                <Run Text="{Binding Nazev}" />
                                            </Hyperlink>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Autor" Binding="{Binding Autor}" Width="150" />
                            <DataGridTextColumn Header="Nakladatelství" Binding="{Binding Nakladatelstvi}" Width="217" />

                            <DataGridTextColumn Header="Rok" Binding="{Binding Rok}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Počet stran" Binding="{Binding PocetStran}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                        <!-- Per-row edit button -->
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="CtxEdit" Header="Upravit" />
                                <MenuItem x:Name="CtxDelete"  Header="Smazat" />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                    <!--Action bar-->
                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Margin="10,8,10,10">
                        <Button x:Name="BtnAddBook"
                                Content="Přidat knihu"
                                Width="100" Margin="5"
                                Style="{StaticResource PrimaryButton}"
                                Click="AddBook_Click"
                                Foreground="AntiqueWhite"
                                Padding="100" FontSize="14" />

                        <Button x:Name="BtnEditBook"
                                Content="Upravit Knihu"
                                Width="100" Margin="5"
                                Style="{StaticResource PrimaryButton}"
                                Foreground="AntiqueWhite"
                                Click="EditBook_Click" />
                        <Button x:Name="BtnDeleteBook"
                                Content="Smazat Knihu"
                                Width="100"
                                Margin="5"
                                Style="{StaticResource PrimaryButton}"
                                Foreground="AntiqueWhite"
                                Click="DeleteBook_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- AUTHORS TAB -->

            <TabItem Header="Autori">
                <Grid Background="{StaticResource AuthoryTabBg}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <!-- table -->
                        <RowDefinition Height="Auto" />
                        <!-- action bar -->
                    </Grid.RowDefinitions>

                    <!-- Authors grid -->
                    <DataGrid x:Name="TableAuthor"
                                AutoGenerateColumns="False"
                                IsReadOnly="True"
                                CanUserAddRows="False"
                                CanUserResizeColumns="False"
                                CanUserReorderColumns="False"
                                HorizontalScrollBarVisibility="Auto"
                                VerticalScrollBarVisibility="Auto"
                                SelectionChanged="TableBooks_SelectionChanged"
                                PreviewKeyDown="TableBooks_PreviewKeyDown"
                                ScrollViewer.CanContentScroll="False"
                                EnableColumnVirtualization="True"
                                EnableRowVirtualization="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="30">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Jméno"    Binding="{Binding JMENO}"    Width="291" />
                            <DataGridTextColumn Header="Příjmení" Binding="{Binding PRIJMENI}" Width="291" />

                            <!-- Per-row edit button -->
                            <DataGridTemplateColumn Header="Akce" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <UniformGrid Columns="2" HorizontalAlignment="Stretch" Margin="6,2">
                                            <Button Content="Upravit"
                                                    Click="RowEditAuthorRow_Click"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource ActionButton}"
                                                    Foreground="AntiqueWhite"
                                                    Margin="0,0,6,0" />
                                            <Button Content="Smazat"
                                                    Click="RowDeleteAuthorRow_Click"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource ActionButton}"
                                                    Foreground="AntiqueWhite" />
                                        </UniformGrid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- PUBLISHER-->
            <TabItem Header="Nakladatelství">
                <Grid Background="{StaticResource PublisherTabBg}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <!-- table -->
                        <RowDefinition Height="Auto" />
                        <!-- action bar -->
                    </Grid.RowDefinitions>

                    <!-- Publishers grid -->
                    <DataGrid x:Name="TablePubl"
                              AutoGenerateColumns="False"
                                IsReadOnly="True"
                                CanUserAddRows="False"
                                CanUserResizeColumns="False"
                                CanUserReorderColumns="False"
                                HorizontalScrollBarVisibility="Auto"
                                VerticalScrollBarVisibility="Auto"
                                SelectionChanged="TableBooks_SelectionChanged"
                                PreviewKeyDown="TableBooks_PreviewKeyDown"
                                ScrollViewer.CanContentScroll="False"
                                EnableColumnVirtualization="True"
                                EnableRowVirtualization="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="30">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Název" Binding="{Binding NAZEV_FIRMY}" Width="291" />
                            <DataGridTextColumn Header="Město" Binding="{Binding MESTO}"        Width="291" />

                            <!-- Per-row edit button -->
                            <DataGridTemplateColumn Header="Akce" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <UniformGrid Columns="2" HorizontalAlignment="Stretch" Margin="6,2">
                                            <Button Content="Upravit" Padding="6,2"
                                                    Click="RowEditPublisherRow_Click"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource ActionButton}"
                                                    Foreground="AntiqueWhite"
                                                    Margin="0,0,6,0" />
                                            <Button Content="Smazat" Padding="6,2"
                                                    Click="RowDeletePublisherRow_Click"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource ActionButton}"
                                                    Foreground="AntiqueWhite" />
                                        </UniformGrid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>